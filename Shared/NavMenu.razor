<div class="top-row ps-3 navbar navbar-dark">
	<div class="container-fluid">
		<a class="navbar-brand" href="">BikeServiceCentre</a>
		<button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
			<span class="navbar-toggler-icon"></span>
		</button>
	</div>
</div>

<div class='@(_collapseNavMenu ? "collapse" : "")' @onclick="ToggleNavMenu">
	<nav class="flex-column">
		<div class="nav-item px-3"><h5 class="text-light">Welcome <strong>@Username</strong>!</h5></div>
		@if (UserRole == Role.Admin)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="addinventory">
                    <span class="oi oi-person" /> Add Inventory
                </NavLink>
			</div>
		}
		
		
		@if (UserRole == Role.User)
		{
			<div class="nav-item px-3">
				<NavLink class="nav-link" href="takeout">
					<span class="oi oi-plus" aria-hidden="true"></span> Request Take Out
				</NavLink>
			</div>
		}

		@if (UserRole == Role.Admin)
		{
			<div class="nav-item px-3">
				<NavLink class="nav-link" href="approvetakeout">
					<span class="oi oi-plus" aria-hidden="true"></span> Approve Take Out
				</NavLink>
			</div>
		}
		<div class="nav-item px-3">
			<NavLink class="nav-link" href="inventorylog">
				<span class="oi oi-list-rich" aria-hidden="true"></span> Inventory Log
			</NavLink>
		</div>
		@if (UserRole == Role.Admin)
		{
			<div class="nav-item px-3">
				<NavLink class="nav-link" href="inventorydetails">
					<span class="oi oi-list-rich" aria-hidden="true"></span> Inventory Details
				</NavLink>
			</div>
		}
		@if (UserRole == Role.Admin)
		{
			<div class="nav-item px-3">
				<NavLink class="nav-link" href="reports">
					<span class="oi oi-list-rich" aria-hidden="true"></span> Reports
				</NavLink>
			</div>
		}
		@if (UserRole == Role.Admin)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="users">
                    <span class="oi oi-person" /> Users
                </NavLink>
            </div>
        }
		<div class="nav-item px-3">
			<NavLink class="nav-link" href="changepassword">
				<span class="oi oi-list-rich" aria-hidden="true"></span> Change Password
			</NavLink>
		</div>
		<div class="nav-item px-3">
			<NavLink class="nav-link text-danger" role="button" @onclick="LogoutHandler">
				<span class="oi oi-account-logout" /> Logout
			</NavLink>
		</div>
	</nav>
</div>

@code {
	[Parameter]
    public string Username { get; set; }
    [Parameter]
    public Role UserRole { get; set; }
    [Parameter]
    public EventCallback LogoutHandler { get; set; }

    private bool _collapseNavMenu { get; set; } = true;

    private void ToggleNavMenu()
    {
        _collapseNavMenu = !_collapseNavMenu;
    }
}

